<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/bottom_sheet"
    android:orientation="vertical">

    <View
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:layout_margin="10dp"
        android:background="@drawable/delete_indicator_shape"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure want to delete?"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_regular"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/tv_delete_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="7dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_regular"
        android:background="@drawable/yes_delete_background"/>
    <TextView
        android:id="@+id/tv_yes_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_regular"
        android:background="@drawable/no_delete_background"/>

</LinearLayout>